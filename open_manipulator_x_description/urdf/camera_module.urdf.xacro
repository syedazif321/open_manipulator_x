<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="intel_d435_camera" params="prefix:='' parent_link:='link5'">

    <link name="${prefix}camera_link">
      <visual>
        <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
        <geometry>
          <mesh filename="${meshes_file_direction}/kkk.stl"/>
        </geometry>
        <material name="Grey">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
        <geometry>
          <mesh filename="${meshes_file_direction}/kkk.stl"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.001"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
      </inertial>
    </link>

    <joint name="${prefix}camera_joint" type="fixed">
      <parent link="${prefix}${parent_link}"/>
      <child link="${prefix}camera_link"/>
      <origin xyz="0.09 0.0 0.0325" rpy="0 0 0"/>
    </joint>

    <!-- Gazebo Plugins -->

    <!-- RGB Camera -->
    <gazebo reference="${prefix}camera_link">
      <sensor name="d435_rgb" type="camera">
        <update_rate>30.0</update_rate>
        <camera>
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="${prefix}d435_rgb_plugin" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>${prefix}/d435</namespace>
          </ros>
          <camera_name>rgb_camera</camera_name>
          <image_topic_name>rgb/image_raw</image_topic_name>
          <camera_info_topic_name>rgb/camera_info</camera_info_topic_name>
          <frame_name>${prefix}camera_link</frame_name>
        </plugin>
      </sensor>
    </gazebo>

    <!-- Infrared Cameras -->
    <gazebo reference="${prefix}camera_link">
      <sensor name="d435_infra1" type="camera">
        <update_rate>30.0</update_rate>
        <camera>
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>L8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="${prefix}d435_infra1_plugin" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>${prefix}/d435</namespace>
          </ros>
          <camera_name>infra1_camera</camera_name>
          <image_topic_name>infra1/image_raw</image_topic_name>
          <camera_info_topic_name>infra1/camera_info</camera_info_topic_name>
          <frame_name>${prefix}camera_link</frame_name>
        </plugin>
      </sensor>

      <sensor name="d435_infra2" type="camera">
        <update_rate>30.0</update_rate>
        <camera>
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>L8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="${prefix}d435_infra2_plugin" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>${prefix}/d435</namespace>
          </ros>
          <camera_name>infra2_camera</camera_name>
          <image_topic_name>infra2/image_raw</image_topic_name>
          <camera_info_topic_name>infra2/camera_info</camera_info_topic_name>
          <frame_name>${prefix}camera_link</frame_name>
        </plugin>
      </sensor>
    </gazebo>

    <!-- Depth Camera with Depth Image and Point Cloud -->
    <gazebo reference="${prefix}camera_link">
      <sensor name="d435_depth" type="depth">
        <update_rate>30.0</update_rate>
        <camera>
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>10.0</far>
          </clip>
        </camera>

        <!-- Depth Image Plugin -->
        <plugin name="${prefix}d435_depth_plugin" filename="libgazebo_ros_depth_camera.so">
          <ros>
            <namespace>${prefix}/d435</namespace>
          </ros>
          <camera_name>depth_camera</camera_name>
          <image_topic_name>depth/image_raw</image_topic_name>
          <camera_info_topic_name>depth/camera_info</camera_info_topic_name>
          <frame_name>${prefix}camera_link</frame_name>
        </plugin>

        <!-- Point Cloud Plugin -->
        <plugin name="${prefix}d435_pointcloud_plugin" filename="libgazebo_ros_point_cloud.so">
          <ros>
            <namespace>${prefix}/d435</namespace>
          </ros>
          <topic_name>points</topic_name>
          <frame_name>${prefix}camera_link</frame_name>
        </plugin>

      </sensor>
    </gazebo>

  </xacro:macro>

</robot>
